<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/baseNotificationFragment">


    <fragment
        android:id="@+id/boardFragment"
        android:name="com.waffle22.wafflytime.ui.BoardFragment"
        android:label="BoardFragment" >
        <action
            android:id="@+id/action_boardFragment_to_threadFragment"
            app:destination="@id/threadFragment" />
        <action
            android:id="@+id/action_boardFragment_to_newThreadFragment"
            app:destination="@id/newThreadFragment" />
    </fragment>
    <fragment
        android:id="@+id/threadFragment"
        android:name="com.waffle22.wafflytime.ui.ThreadFragment"
        android:label="ThreadFragment" />
    <fragment
        android:id="@+id/newThreadFragment"
        android:name="com.waffle22.wafflytime.ui.NewThreadFragment"
        android:label="NewThreadFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.waffle22.wafflytime.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.waffle22.wafflytime.ui.login.SignUpFragment"
        android:label="SignUpFragment" />
    <fragment
        android:id="@+id/notifyFragment"
        android:name="com.waffle22.wafflytime.ui.notification.NotifyFragment"
        android:label="NotifyFragment" >
        <action
            android:id="@+id/action_notifyFragment_to_chatBoxFragment"
            app:destination="@id/chatBoxFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatBoxFragment"
        android:name="com.waffle22.wafflytime.ui.notification.ChatBoxFragment"
        android:label="ChatBoxFragment" >
        <action
            android:id="@+id/action_chatBoxFragment_to_notifyFragment"
            app:destination="@id/notifyFragment" />
    </fragment>
    <fragment
        android:id="@+id/baseNotificationFragment"
        android:name="com.waffle22.wafflytime.ui.notification.BaseNotificationFragment"
        android:label="BaseNotificationFragment" />
</navigation>